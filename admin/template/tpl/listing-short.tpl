<div class="row" style="background-color: {bgcolor}; border-bottom : 1px dotted #CCCC99; padding: 10px">
	<div class="col3" >
		<a href="{link}"><img src="{image}" border="0"></a>
	</div>
	
	<div class="col6">
		<span class="bold"><a href="{link}">{title}</a></span> 
		<br /><br />
		
		<span style="padding: 2px; background-color: #5678A2; color: white;">{type2}</span> {new} {updated} {featured} [ {date_added} ]
		
		<br /><br />
		
		{description}<br /><br />
		
		{location3} {location2} {location1}
		
		<br /><br />
		
		<span class="price">{@price}: {currency} {price} </span>
		
		<br /><br />
	</div>
	
	<div class="col3 last">
		<br />
	  {approve} | {edit} | {remove}
	   <br /><br />
	  {@view_realtor}: {view_realtor}
	</div>
	
	<div class="clearfix"></div>
</div>
