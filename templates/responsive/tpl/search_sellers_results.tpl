<div class="property span3">
    <div class="image">
        <div class="content">
            <a href="{link}"></a>
            <img src="{image}" width="100" height="74">
        </div>

        <div class="price">{first_name} {last_name}</div>
        <div class="reduced">{@profile}</div>
    </div>

    <div class="title">
        <h2><a href="{link}">{address}</a></h2>
    </div>

    <div class="location">{city} {state}</div>
    <div class="area">
        <span class="key">{@phone}:</span>
        <span class="value">{phone}</span>
    </div>
</div>