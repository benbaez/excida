<div class="property span3">
    <div class="image">
        <div class="content">
            <a href="{link}"></a>
            <img src="{image}" width="270" height="178">
        </div><!-- /.content -->

        <div class="price">{currency} {price}</div><!-- /.price -->
        <div class="reduced">{@featured} </div><!-- /.reduced -->
    </div><!-- /.image -->

    <div class="title">
        <h2><a href="{link}">{address1}</a></h2>
    </div><!-- /.title -->

    <div class="location">{location3}, {location2}</div><!-- /.location -->
    <div class="area">
        <span class="key">{@zip}:</span><!-- /.key -->
        <span class="value">{zip}</span><!-- /.value -->
    </div><!-- /.area -->
    <div class="bedrooms"><div class="content">{bedrooms}</div></div><!-- /.bedrooms -->
    <div class="bathrooms"><div class="content">{bathrooms}</div></div><!-- /.bathrooms -->
</div><!-- /.property -->